<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>My Payment Methods - Formal Wear Store</title>
  <link rel="stylesheet" href="/css/useraccount/profile.css">
</head>
<body>
  <%- include('../partials/header') %>
  <main class="profile-information">
    <div class="container">
      <h1>My Payment Methods</h1>
      <% if (success_msg && success_msg.length > 0) { %>
        <div class="alert success"><%= success_msg %></div>
      <% } %>
      <% if (error && error.length > 0) { %>
        <div class="alert error"><%= error %></div>
      <% } %>
      <% if (user && user.paymentMethods && user.paymentMethods.length > 0) { %>
        <div class="payment-list">
          <% user.paymentMethods.forEach(method => { %>
            <div class="payment-item">
              <p><%= method.type %> ending in <%= method.last4 %></p>
              <form action="/account/payment-methods/remove/<%= method._id %>" method="POST">
                <button type="submit" class="btn">Remove</button>
              </form>
            </div>
          <% }) %>
        </div>
        <a href="/account/payment-methods/add" class="btn">Add New Payment Method</a>
      <% } else { %>
        <p>No payment methods found. <a href="/account/payment-methods/add">Add a new payment method</a></p>
      <% } %>
    </div>
  </main>
  <%- include('../partials/footer') %>
</body>
</html>