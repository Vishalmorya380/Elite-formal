<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>My Addresses - Formal Wear Store</title>
  <link rel="stylesheet" href="/css/useraccount/profile.css">
</head>
<body>
  <%- include('../partials/header') %>
  <main class="profile-information">
    <div class="container">
      <h1>My Addresses</h1>
      <% if (success_msg && success_msg.length > 0) { %>
        <div class="alert success"><%= success_msg %></div>
      <% } %>
      <% if (error && error.length > 0) { %>
        <div class="alert error"><%= error %></div>
      <% } %>
      <% if (user && user.addresses && user.addresses.length > 0) { %>
        <div class="address-list">
          <% user.addresses.forEach(address => { %>
            <div class="address-item">
              <p><%= address.line1 %>, <%= address.city %>, <%= address.state %> - <%= address.zip %></p>
              <form action="/account/addresses/remove/<%= address._id %>" method="POST">
                <button type="submit" class="btn">Remove</button>
              </form>
            </div>
          <% }) %>
        </div>
        <a href="/account/addresses/add" class="btn">Add New Address</a>
      <% } else { %>
        <p>No addresses found. <a href="/account/addresses/add">Add a new address</a></p>
      <% } %>
    </div>
  </main>
  <%- include('../partials/footer') %>
</body>
</html>