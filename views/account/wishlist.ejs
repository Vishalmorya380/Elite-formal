<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>My Wishlist - Formal Wear Store</title>
  <link rel="stylesheet" href="/css/useraccount/profile.css">
</head>
<body>
  <%- include('../partials/header') %>
  <main class="profile-information">
    <div class="container">
      <h1>My Wishlist</h1>
      <% if (success_msg && success_msg.length > 0) { %>
        <div class="alert success"><%= success_msg %></div>
      <% } %>
      <% if (error && error.length > 0) { %>
        <div class="alert error"><%= error %></div>
      <% } %>
      <% if (user && user.wishlist && user.wishlist.length > 0) { %>
        <div class="wishlist-list">
          <% user.wishlist.forEach(item => { %>
            <div class="wishlist-item">
              <p>Product: <%= item.name %></p>
              <p>Price: â‚¹<%= item.price %></p>
              <a href="/products/<%= item._id %>" class="btn">View Product</a>
              <form action="/account/wishlist/remove/<%= item._id %>" method="POST">
                <button type="submit" class="btn">Remove</button>
              </form>
            </div>
          <% }) %>
        </div>
      <% } else { %>
        <p>No items in wishlist.</p>
      <% } %>
    </div>
  </main>
  <%- include('../partials/footer') %>
</body>
</html>