<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>My Returns & Refunds - Formal Wear Store</title>
  <link rel="stylesheet" href="/css/useraccount/profile.css">
</head>
<body>
  <%- include('../partials/header') %>
  <main class="profile-information">
    <div class="container">
      <h1>My Returns & Refunds</h1>
      <% if (success_msg && success_msg.length > 0) { %>
        <div class="alert success"><%= success_msg %></div>
      <% } %>
      <% if (error && error.length > 0) { %>
        <div class="alert error"><%= error %></div>
      <% } %>
      <% if (user && user.returns && user.returns.length > 0) { %>
        <div class="return-list">
          <% user.returns.forEach(returnItem => { %>
            <div class="return-item">
              <p>Order ID: <%= returnItem.orderId %></p>
              <p>Status: <%= returnItem.status %></p>
              <p>Date: <%= returnItem.createdAt.toLocaleDateString() %></p>
            </div>
          <% }) %>
        </div>
      <% } else { %>
        <p>No returns or refunds found.</p>
      <% } %>
    </div>
  </main>
  <%- include('../partials/footer') %>
</body>
</html>